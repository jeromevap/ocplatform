{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - {{ advert.title }}{% endblock %}

{% block body %}
    <div class="col-9 bg-light">
        <p>{{ advert.title }}</p>
        <p>{{ advert.author }}</p>
        <p>{{ advert.content }}</p>
        <p>{{ advert.date | date('d/m/Y') }} - {{ advert.id }}</p>
        <figure class="figure mh-25"><img src="{{ advert.image.url | default("https://district-aube.fff.fr/wp-content/uploads/sites/58/2018/11/depositphotos_124327470-stock-illustration-absent-rubber-stamp-611x378.jpg") }}"
                class="img-fluid rounded"
                alt="{{ advert.image.alt | default("Pas d'image disponible") }}"></figure>
    </div>
    <div class="col-9">
        <a href="{{ path('oc_advert_index') }}" class="btn btn-outline-primary">
            <i class="fa fa-chevron-left"></i>
            Retour Ã  la liste
        </a>
        <a href="{{ path('oc_advert_edit', {'id': advert.id}) }}" class="btn btn-outline-primary">
            <i class="fa fa-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('oc_advert_delete', {'id': advert.id}) }}" class="btn btn-outline-danger">
            <i class="fa fa-trash"></i>
            Supprimer l'annonce
        </a>
    </div>
    <div class="col-3">
        {% for app in applications %}
            <h3>{{ app.author }}</h3>
            <p>{{ app.content }}</p>
        {% endfor %}
    </div>
{% endblock %}
