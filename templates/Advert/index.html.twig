{% extends 'layout.html.twig' %}


{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
    <div class="row">
        {% for advert in listAdverts %}
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ path('oc_advert_view', {'id': advert.id}) }}">
                                <h5>
                                    {{ advert.title }}
                                </h5>
                            </a>
                        </h4>
                        <p class="card-text">Auteur : {{ advert.author }}</p>
                        <img src="{{ advert.image.url | default("https://district-aube.fff.fr/wp-content/uploads/sites/58/2018/11/depositphotos_124327470-stock-illustration-absent-rubber-stamp-611x378.jpg") }}"
                             alt="{{ advert.image.alt | default('Pas d\image') }}" class="img-fluid">
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <nav>
        <ul class="pagination">
            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
            {% for p in range(1, nbPages) %}
                <li class="page-item {% if p == page %}active{% endif %}">
                    <a href="{{ path('oc_advert_index', {'page': p}) }}" class="page-link">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}

